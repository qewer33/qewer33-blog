---
const isHome = Astro.url.pathname === "/";
---

<header>
    <nav>
        <div class="nav-inner">
            {!isHome && (
                <a class="back" href="/">&lt; Back</a>
            )}
            <a class="brand" href="https://qewer.dev/">
                <img src="/logo.png" alt="" aria-hidden="true" />
                <span>qewer.dev</span>
            </a>
        </div>
    </nav>
</header>

<style>
header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    background: linear-gradient(to bottom, rgba(var(--background-primary), 0.5) 60%, #0000);
}

header nav {
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0;
}

.nav-inner {
    width: 100%;
    max-width: 930px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    margin: 0 auto;
}

.back {
    grid-column: 1;
    justify-self: start;
    text-decoration: none;
    color: rgb(var(--text-secondary));
    font-size: 1.25rem;
}

.back:hover {
    color: rgb(var(--accent-primary));
}

.brand {
    grid-column: 2;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    user-select: none;
    color: #3b82f6;
    font-weight: bold;
    font-size: 1.5rem;
    padding: 10px 20px;
    text-transform: none;
    justify-self: center;
}

.brand img {
    width: 28px;
    height: 28px;
}

.brand:hover {
    color: #2563eb;
}

@media screen and (max-width: 950px) {
    .nav-inner {
        max-width: 760px;
        padding: 0 20px;
    }
}

@media screen and (max-width: 780px) {
    .nav-inner {
        max-width: 100%;
    }
}
</style>
